pipeline { 
    agent any 
    stages {
        stage('Setup') { 
            steps { 
                sh "sudo apt update"
                sh "sudo apt install python3-venv python3-pip python3 -y"
                sh "python -m pip install --user virtualenv"
                sh "source venv/bin/activate"
                sh "pip3 install -r requirements.txt"
            }
        }
