pipeline { 
    agent any 
    stages {
        stage('Setup') { 
            steps { 
                sh "sudo apt update"
                sh "sudo apt install python3-venv python3-pip python3 -y"
                sh "pip3 install -r requirements.txt"
            }
        }
        stage('Test'){
            steps {
                sh "python3 -m pytest"
                sh "--cov=application"
                sh "--cov-report term-missing"
                sh "--cov-report xml:coverage.xml"
                sh "junit=junit_report.xml"
//            }
////        }
//        stage('Deploy') {
 //           steps {
 //               sh 'make publish'
 //           }
 //       }
 //   }
    }
 }